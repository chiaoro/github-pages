<body>
  <div id="scratchCanvas">
    <div id="hiddenMessage">æ­å–œä¸­çï¼ğŸ‰</div>
    <canvas id="scratchLayer" width="300" height="200"></canvas>
  </div>

  <script>
    const canvas = document.getElementById('scratchLayer');
    const ctx = canvas.getContext('2d');

    // åˆå§‹åŒ–ç°è‰²é®ç½©
    ctx.fillStyle = '#888';
    ctx.fillRect(0, 0, canvas.width, canvas.height);

    // å¯¦ç¾åˆ®åˆ®æ•ˆæœ
    canvas.addEventListener('touchmove', scratch, { passive: false }); // è§¸æ‘¸
    canvas.addEventListener('mousemove', scratch); // é¼ æ¨™
    canvas.addEventListener('mousedown', startDrawing);
    canvas.addEventListener('mouseup', stopDrawing);

    let isDrawing = false;

    function startDrawing() {
      isDrawing = true;
    }

    function stopDrawing() {
      isDrawing = false;
      checkIfCleared(); // æª¢æŸ¥æ˜¯å¦åˆ®é–‹äº†è¶³å¤ çš„å€åŸŸ
    }

    function scratch(event) {
      if (!isDrawing) return;

      // ç²å–è§¸æ‘¸é»ä½ç½®
      const rect = canvas.getBoundingClientRect();
      const x = (event.touches ? event.touches[0].clientX : event.clientX) - rect.left;
      const y = (event.touches ? event.touches[0].clientY : event.clientY) - rect.top;

      // æ¨¡æ“¬åˆ®é™¤
      ctx.globalCompositeOperation = 'destination-out';
      ctx.beginPath();
      ctx.arc(x, y, 20, 0, Math.PI * 2);
      ctx.fill();
    }

    function checkIfCleared() {
      const imgData = ctx.getImageData(0, 0, canvas.width, canvas.height).data;
      const clearedPixels = imgData.filter((value, index) => index % 4 === 3 && value === 0); // é€æ˜åƒç´ 

      const clearedRatio = clearedPixels.length / (canvas.width * canvas.height);
      if (clearedRatio > 0.5) {
        alert('å·²æˆåŠŸåˆ®é–‹è¶…é50%ï¼');
      }
    }
  </script>
